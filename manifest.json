{
    "manifest_version": 2,
    "name": "Color Tabs",
    "version": "1.1.0",
    "description": "Firefox tabs custom color based on URL",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "theme",
        "tabs",
        "storage"
    ],
    "options_ui": {
        "page": "options/options.html",
        "browser_style": true
    },
    "icons": {
        "48": "icons/icon-48.png"
    }
}